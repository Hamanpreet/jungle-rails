<h1>Login</h1>
<% if @error %>
  <p class="error"><%= @error %></p>
<% end %>

<%= form_tag login_path do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email], class: 'form-control smaller-input' %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, class: 'form-control smaller-input' %>
  </div>
  <%= submit_tag "Submit", class: 'btn btn-primary' %>
<% end %>
